<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".fragment.others.CollectionFragment"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/collection_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="16dp"
        app:spanCount="2"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:orientation="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/upper_round"
        android:backgroundTint="@color/brown1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/collection_how_acquisition_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-"
            android:layout_gravity="center"
            android:padding="16dp"/>


        <Button
            android:id="@+id/collection_btn_detail"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/brown2"
            android:text="상세"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingBottom="5dp"
            tools:visibility="visible"
            android:visibility="gone"
            android:layout_marginRight="16dp"/>

    </LinearLayout>

</LinearLayout>
