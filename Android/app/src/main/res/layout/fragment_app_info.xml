<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:padding="16dp"
    tools:context=".AppInfoFragment">

    <TextView
        android:id="@+id/app_info_terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="이용 약관"
        android:textStyle="bold"
        android:textSize="32sp"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/user_info_form"
        android:layout_marginVertical="32dp"/>

    <TextView
        android:id="@+id/app_info_personal_info_policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="개인 정보 처리 방침"
        android:textStyle="bold"
        android:textSize="32sp"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/user_info_form"
        android:layout_marginVertical="32dp"/>

    <TextView
        android:id="@+id/app_info_delete_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="캐시 삭제"
        android:textStyle="bold"
        android:textSize="32sp"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/user_info_form"
        android:layout_marginVertical="32dp"/>

    <TextView
        android:id="@+id/app_info_license"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="오픈 소스 라이선스"
        android:textStyle="bold"
        android:textSize="32sp"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/user_info_form"
        android:layout_marginVertical="32dp"/>

    <TextView
        android:id="@+id/app_info_cs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="고객 센터"
        android:textStyle="bold"
        android:textSize="32sp"
        android:gravity="center"
        android:padding="8dp"
        android:background="@drawable/user_info_form"
        android:layout_marginVertical="32dp"/>


</LinearLayout>