<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:background="@color/background"
    tools:context=".GameFragment">

    <LinearLayout
        android:id="@+id/game_ll_heritage_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.77"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/round_corner_black_stroke_item"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/game_ll_progress">

        <ImageView
            android:id="@+id/game_iv_heritage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/game_main"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/game_iv_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/game_main"/>

        <TextView
            android:id="@+id/game_tv_question_upper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지금 있는 장소의 사진을"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/game_tv_question_lower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모두 골라 주세요"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/game_tv_question_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 10문제"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/game_ll_progress"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.06"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/game_ll_heritage_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/game_ll_buttons">

        <ProgressBar
            android:id="@+id/game_progress_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_weight="1"
            android:max="10"
            android:indeterminate="false"
            android:minHeight="50dp"
            android:progress="0"/>

        <TextView
            android:id="@+id/game_tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="13dp"
            android:textSize="14sp"
            tools:text="0/10"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/game_ll_buttons"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.17"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/game_ll_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/game_tv_wrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/bg_round_brown"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="#7A8089"
            android:textSize="40sp"
            android:text="X"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/game_tv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/bg_round_brown"
            android:gravity="center"
            android:padding="14dp"
            android:textColor="#7A8089"
            android:textSize="40sp"
            tools:text="시작"
            />

        <TextView
            android:id="@+id/game_tv_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/bg_round_brown"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="#7A8089"
            android:textSize="40sp"
            android:text="O"
            android:visibility="gone"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>